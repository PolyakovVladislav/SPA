<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/illustration_settings" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sound_on"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@id/iv_sound_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView"
        app:srcCompat="@drawable/ic_sound_on" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sound_off"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_sound_on"
        app:layout_constraintTop_toTopOf="@+id/iv_sound_on"
        app:srcCompat="@drawable/ic_sound_off" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_vibrate_on"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@id/iv_vibrate_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_sound_on"
        app:srcCompat="@drawable/ic_vibr_on" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_vibrate_off"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_vibrate_on"
        app:layout_constraintTop_toTopOf="@+id/iv_vibrate_on"
        app:srcCompat="@drawable/ic_vibr_off" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/montserrat_700"
        android:gravity="center"
        android:soundEffectsEnabled="true"
        android:text="@string/reset_score"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>